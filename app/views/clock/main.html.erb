<section>
  <article>
    <h2>Your current tiemzone</h2>
    <%= render 'timezone', timezone: @current_timezone %>
    <p><%= link_to 'Select my timezone', edit_clock_path(current_user) %></p>
    <p><%= link_to 'See all available timezones', all_timezones_path %></p>
  </article>
</section>
<% if user_signed_in? %>
  <article>
    <h2>Timezones</h2>
    <p><%= link_to 'My timezones', clock_index_path %></p>
  </article>
  <article>
    <h2>Stopwatches</h2>
    <p><%= link_to 'My stopwatches', user_stopwatches_path(current_user) %></p>
  </article>
  <article>
    <h2>Alarms</h2>
    <p><%= link_to 'My alarms', alarms_path %></p>
  </article>
<% end %>
