<div class="row">
  <% @user_timezones.each do |timezone| %>
    <div class="col-3">
    <div class="card text-center shadow p-3 mb-3 bg-body rounded">
      <div class="card-body">
        <%= render 'timezone', timezone: ActiveSupport::TimeZone.new(timezone.name)  %>  
        <%= button_to 'Remove timezone', clock_path(timezone), method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
    </div>
  <% end %>
</div>
