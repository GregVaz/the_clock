<div class="row">
  <% @timezones.each do |timezone| %>
    <div class="col-3">
    <div class="card text-center shadow p-3 mb-3 bg-body rounded">
      <div class="card-body">
        <%= render 'timezone', timezone: timezone[:timezone] %>  
        <%= render 'weather', weather: timezone[:weather] %>  
        
        <% if user_signed_in? %>
          <%= button_to 'Save as favorite', clock_index_path, method: :post, params: { name: timezone[:timezone].name}, class: "btn btn-secondary" %>
        <% end %>
      </div>
    </div>
    </div>
  <% end %>
</div>
<%= link_to 'Back to main', clock_index_path %>
