<h1> New Alarm </h1>
<%= form_with model: [@user, @alarm]  do |form| %>
  <div>
    <%= form.label :label %><br>
    <%= form.text_field :label %>
  </div>

  <div>
    <%= form.label :time %><br>
    <%= form.datetime_field :time, :value => DateTime.now.strftime('%Y-%m-%dT%H:%M') %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to Home', root_path %>
