<div class="d-flex justify-content-center">
  <input type="text" id="label" name="label" placeholder="Label" class="form-control w-25">
</div>
<div class="w-75 mx-auto">
  <div class="stopwatch-view mx-auto">
    <h3><span id="minutes">00</span>:<span id="seconds">00</span></h3>
  </div>
  <div class="d-flex justify-content-center"> 
    <button id="start" class="btn btn-primary m-1"> Start </button>
    <button id="reset" class="btn btn-danger m-1"> Reset </button>
  </div>
  <div class="w-25 mx-auto">
    <button id="record" data-user-id="<%= current_user.id %>" class="btn btn-info btn-block btn-sm m-1"> Save time </button>
  </div>
</div>

<%= javascript_pack_tag 'stopwatch', 'data-turbolinks-track': 'reload' %>
