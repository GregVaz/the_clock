<div class="d-flex flex-column align-items-center">
  <input type="text" id="label" name="label" placeholder="Label" class="form-control w-25">
  <div class="row w-100">
    <div class="col-8"> 
      <div class="stopwatch-view mx-auto">
        <h3><span id="hours">00</span>:<span id="minutes">00</span>:<span id="seconds">00</span></h3>
      </div>
      <div class="d-flex justify-content-center"> 
        <button id="start" class="btn btn-primary m-1"> Start </button>
        <button id="reset" class="btn btn-danger m-1"> Reset </button>
      </div>
      <div class="mx-auto w-25">
        <button id="save-lap-btn" data-user-id="<%= current_user.id %>" class="btn btn-info btn-block btn-sm m-1"> Save lap </button>
        <button id="save-stopwatch-btn" class="btn btn-success btn-block btn-sm m-1"> Save Stopwatch </button> 
      </div>
    </div>
    <div class="col-4">
      <h5>Laps</h5>
      <div id="show-laps" class="w-100 row"></div>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'stopwatch', 'data-turbolinks-track': 'reload' %>
